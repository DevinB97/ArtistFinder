/* General Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #ccccff;
}

html {
    font-family: 'Open Sans', sans-serif;
    color: #333;
}

body {
    margin: 0;
    padding: 0;
}

header {
    /*background-color: #4CAF50;*/
    color: white;
    padding: 20px;
    text-align: center;
	
}

header h1 {
	color: black;
    font-size: 2.5em;
    margin: 0;
}

/* Navigation Styles */
nav {
    background-color: #333;
    overflow: hidden;
}

nav ul {
	background-color: #8080ff;
	border: 1px solid #8080ff;
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: space-around;
	  float: center;
  display: block;
  color: black;
  text-align: right;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 20px;
  /*width: 700px;*/
}

nav li {
    float: left;
}

nav a {
	background-color: #8080ff;
    display: block;
    color: black;
    text-align: center;
    padding: 14px 20px;
    text-decoration: none;
}

nav a:hover {
    background-color: #ddd;
    color: black;
}

/* Main Content Styles */
main {
    padding: 20px;
}

section {
    background-color: #fff;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

section h3.title {
    font-size: 2em;
    margin-bottom: 15px;
    color: #4CAF50;
}

/* Form Styles */
form {
    display: flex;
    flex-direction: column;
}

form label {
    margin: 10px 0 5px;
    font-weight: bold;
}

form input, form textarea, form button {
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid black;
    border-radius: 5px;
}

form button {
    background-color: #8080ff;
    color: white;
    border: none;
    cursor: pointer;
}

form button:hover {
    background-color: #45a049;
}

/* Footer Styles */
footer {
    background-color: #8080ff;
    color: white;
    text-align: center;
    padding: 10px 0;
}

footer ul {
	background-color: #8080ff;
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
}

footer p {
	background-color: #8080ff;
}

footer li {
    margin: 0 10px;
}

footer h2, footer h3{
	background-color: #8080ff;
}

footer a {
	background-color: #8080ff;
    color: black;
    font-size: 1.5em;
    text-decoration: none;
}

footer a:hover {
    color: #ddd;
}