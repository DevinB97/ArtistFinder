/*-------------
 Nav
-------------*/

nav {
  float: center;
  display: block;
  color: black;
  text-align: right;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 20px;
  /*width: 700px;*/
}

nav a:hover {
  background-color: #ddd;
  color: black;
}

nav a.active {
  background-color: #2196F3;
  color: white;
}

nav input[type=text] {
  float: right;
  padding: 6px;
  border: none;
  margin-top: 8px;
  margin-right: 0px;
  font-size: 17px;
}

@media screen and (max-width: 600px) {
nav a, nav input[type=text] {
    float: none;
    display: block;
    text-align: left;
    width: 100%;
    margin: 0;
    padding: 14px;
  }
nav input[type=text] {
    border: 1px solid #ccc;
  }
}


